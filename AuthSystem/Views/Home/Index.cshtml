            .grid-container {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 20px;
                max-width: 600px;
                padding: 20px;
                background-color:transparent;
                border-radius: 10px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

            .grid-item {
                padding: 20px;
                background-color: #3498db;
                color: #fff;
                border-radius: 5px;
                text-align: center;
            }

        .text-center {
            padding-left: 187px;
            margin-top: 96px;
        }

        body {
            background-image: url('https://cdn.dribbble.com/users/912710/screenshots/3885737/media/284a10e45c419a95a04f1b51baa15841.gif'); /* Replace with the actual path to your GIF file */
     
            background-repeat: no-repeat;
            background-size: cover;
            /* Other styles for the body */
        }
        </style>
        <title>Grid Layout Example</title>
    </head>
    <body>
    <div class="text-center">
        <div class="container">
        <div class="grid-container">
                <a asp-action="BankingAnalyticsReport">  <div class="grid-item">BankingAnalyticsReport</div></a>
            <div class="grid-item">Box 2</div>
            <div class="grid-item">Box 3</div>
            <div class="grid-item">Box 4</div>
            <div class="grid-item">Box 5</div>
            <div class="grid-item">Box 6</div>
            <div class="grid-item">Box 7</div>
            <div class="grid-item">Box 8</div>
            <div class="grid-item">Box 9</div>
        </div>
        </div>
    </div>

    </body>
</html>

